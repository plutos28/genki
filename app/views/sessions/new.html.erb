<a href="<%= root_path %>" class="absolute top-6 left-3">
  <svg class="fill-blue-600" xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#000000" viewBox="0 0 256 256"><path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216ZM149.66,93.66,115.31,128l34.35,34.34a8,8,0,0,1-11.32,11.32l-40-40a8,8,0,0,1,0-11.32l40-40a8,8,0,0,1,11.32,11.32Z"></path></svg>
</a>

<div class="flex flex-col items-center h-screen w-screen -ml-10 -mt-12 pt-10", style="background: radial-gradient(circle at 18.7% 37.8%, rgb(250, 250, 250) 0%, rgb(225, 234, 238) 90%);;
">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block"><%= notice %></p>
  <% end %>

  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block"><%= alert %></p>
  <% end %>

  <div class="bg-white w-3/12 flex flex-col items-center px-10 py-8 rounded-xl shadow-[rgba(50,_50,_105,_0.15)_0px_2px_5px_0px,_rgba(0,_0,_0,_0.05)_0px_1px_1px_0px]">
    <h1 class="font-bold text-2xl mb-6">Sign in</h1>

    <%= form_with(url: sign_in_path, html: { class: "w-10/12"}) do |form| %>
      <div class="mb-4">
        <%= form.label :email, style: "display: block", class: "mb-2" %>
        <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "w-full outline outline-gray-400 outline-1 rounded-sm px-2 py-2 text-sm focus:outline focus:outline-2 focus:outline-blue-400" %>
      </div>

      <div class="mb-4">
        <%= form.label :password, style: "display: block", class: "mb-2" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password", class: "w-full outline outline-gray-400 outline-1 rounded-sm px-2 py-2 text-sm focus:outline focus:outline-2 focus:outline-blue-400" %>
      </div>

      <div>
        <%= form.submit "Sign in", class: "flex justify-center hover:scale-2 mt-1 rounded-md w-full bg-blue-400 px-2 py-1 text-white text-lg shadow-[0px_2px_3px_-1px_rgba(0,0,0,0.1),0px_1px_0px_0px_rgba(25,28,33,0.02),0px_0px_0px_1px_rgba(25,28,33,0.08)]" %>
      </div>
    <% end %>

    <br>


    <br>

    <div>
      <%= link_to "Sign up", sign_up_path, class: "text-blue-600" %> |
      <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "text-blue-600" %>
    </div>
  </div>
</div>