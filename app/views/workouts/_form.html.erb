<%= form_with(model: workout_plan, url: workouts_path) do |form| %>
  <% if workout_plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(workout_plan.errors.count, "error") %> prohibited this workout plan from being saved:</h2>

      <ul>
      <% workout_plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :weight, value: latest_weight.value %>
  <%= form.hidden_field :height, value: latest_height.value %>
  <%= form.hidden_field :age, value: latest_age.value %>
  <%= form.hidden_field :bodyfat, value: latest_bodyfat.value %>

  <div class="field flex flex-col mb-2">
    <%= form.label :goal, "What's your goal?", class: "text-xl mb-2 text-gray-700" %>
    <%= form.select :goal, options_for_select([
      ['Lose Weight', 'lose weight'],
      ['Build Muscle', 'build muscle'],
      ['Increase Endurance', 'increase endurance'],
      ['Improve Flexibility', 'improve_ lexibility'],
      ['Maintain Fitness', 'maintain fitness'],
    ]), {}, { class: "rounded-lg py-4 text-2xl text-gray-900"} %>
  </div>

   <div class="field flex flex-col mb-2">
    <%= form.label :frequency, "How often do you want to work out?", class: "text-xl mb-2 text-gray-700" %>
    <%= form.select :frequency, options_for_select([
      ['1-2 days a week', '1-2'],
      ['3-4 days a week', '3-4'],
      ['5-6 days a week', '5-6'],
      ['Every day', '7']
    ]), {}, { class: "rounded-lg py-4 text-2xl text-gray-900"} %>
  </div>

  <!-- <div class="field flex flex-col mb-2">
    <%= form.label :volume, "Volume" %>
    <%= form.select :volume, options_for_select([
      ['Low Volume (few sets and reps per session)', 'low'],
      ['Moderate Volume (moderate sets and reps per session)', 'moderate'],
      ['High Volume (many sets and reps per session)', 'high']
    ]) %>
  </div> -->

  <div class="field flex flex-col mb-2">
    <%= form.label :duration, "How long do you want each workout session to be?", class: "text-xl mb-2 text-gray-700" %>
    <%= form.select :duration, options_for_select([
      ['15-30 minutes', '15-30'],
      ['30-45 minutes', '30-45'],
      ['45-60 minutes', '45-60'],
      ['60+ minutes', '60+']
    ]), {}, { class: "rounded-lg py-4 text-2xl text-gray-900"} %>
  </div>

  <div class="field flex flex-col mb-2">
    <%= form.label :intensity, "How intense do you want your workouts to be?", class: "text-xl mb-2 text-gray-700" %>
    <%= form.select :intensity, options_for_select([
      ['Low(Light effort, easy pace)', 'low'],
      ['Moderate(Moderate effort, can hold a conversation)', 'moderate'],
      ['High(Hard effort, challenging pace)', 'high']
    ]), {}, { class: "rounded-lg py-4 text-2xl text-gray-900"} %>
  </div>

  <div class="field flex flex-col mb-2">
    <%= form.label :type_of_training, "What type of training do you prefer?", class: "text-xl mb-2 text-gray-700" %>
    <%= form.select :type_of_training, options_for_select([
      ['Home Training', 'home_training'],
      ['Gym', 'gym'],
      ['Outdoor', 'outdoor'],
      ['Sports', 'sports'],
    ]), {}, { class: "rounded-lg py-4 text-2xl text-gray-900"} %>
  </div>


  <div class="w-full flex justify-end actions space-x-4">
    <%= button_tag(type: 'button', class: "font-bold flex justify-center hover:scale-2 mt-1 rounded-md w-32 bg-white px-2 py-2 text-black text-xl shadow-[0px_2px_3px_-1px_rgba(0,0,0,0.1),0px_1px_0px_0px_rgba(25,28,33,0.02),0px_0px_0px_1px_rgba(25,28,33,0.08)]", data: {controller: "add-workout-plan"}) do %>Cancel<% end %>
    <%= button_tag(type: 'submit', class: 'flex justify-center hover:scale-2 mt-1 rounded-md w-32 bg-orange-400 px-2 py-2 text-white text-xl font-bold shadow-[0px_2px_3px_-1px_rgba(0,0,0,0.1),0px_1px_0px_0px_rgba(25,28,33,0.02),0px_0px_0px_1px_rgba(25,28,33,0.08)]', data: {controller: "add-workout-plan", confirm: "Generate a nutrition plan with these details?" }) do %>
