<div class="flex flex-col items-center h-screen w-screen -ml-10 -mt-12 pt-10", style="background: radial-gradient(circle at 18.7% 37.8%, rgb(250, 250, 250) 0%, rgb(225, 234, 238) 90%);
">
  <div class="bg-white w-3/12 flex flex-col items-center px-10 py-8 rounded-xl shadow-[rgba(50,_50,_105,_0.15)_0px_2px_5px_0px,_rgba(0,_0,_0,_0.05)_0px_1px_1px_0px]">
    <h1 class="font-bold text-2xl mb-6">Sign up</h1>

    <%= form_with(url: sign_up_path, html: { class: "w-10/12"})  do |form| %>
      <% if @user.errors.any? %>
        <div style="color: red" class="mb-4">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :email, style: "display: block", class: "mb-2" %>
        <%= form.email_field :email, value: @user.email, required: true, autofocus: true, autocomplete: "email", class: "w-full outline outline-gray-400 outline-1 rounded-sm px-2 py-2 text-sm focus:outline focus:outline-2 focus:outline-blue-400"  %>
      </div>

      <div class="mb-4">
        <%= form.label :password, style: "display: block", class: "mb-2" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", class: "w-full outline outline-gray-400 outline-1 rounded-sm px-2 py-2 text-sm focus:outline focus:outline-2 focus:outline-blue-400"  %>
        <div>6 characters minimum.</div>
      </div>

      <div class="mb-4">
        <%= form.label :password_confirmation, style: "display: block", class: "mb-2" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "w-full outline outline-gray-400 outline-1 rounded-sm px-2 py-2 text-sm focus:outline focus:outline-2 focus:outline-blue-400"  %>
      </div>

      <div>
        <%= form.submit "Sign up", class: "flex justify-center hover:scale-2 mt-1 rounded-md w-full bg-blue-400 px-2 py-1 text-white text-lg shadow-[0px_2px_3px_-1px_rgba(0,0,0,0.1),0px_1px_0px_0px_rgba(25,28,33,0.02),0px_0px_0px_1px_rgba(25,28,33,0.08)]"  %>
      </div>
    <% end %>
  </div>

</div>